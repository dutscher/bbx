{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@utils": ["src/utils.ts"],
      "@stores": ["src/stores.ts"],
      "@interfaces": ["src/_interfaces.ts"],
      "@beerui": ["src/beerui.ts"]
    }
  }
}
